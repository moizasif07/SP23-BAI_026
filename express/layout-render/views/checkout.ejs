<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Validation</title>
    <link rel="stylesheet" href="/stylesheets/checkout.css">
    <script defer src="/javascripts/index.js"></script>
</head>
<body>
    <div class="container">
        <form id="form" action="/" novalidate>
            <h1>Registration</h1>

            <div class="input-control">
                <label for="username">Full Name</label>
                <input id="username" name="username" type="text" required pattern="^[A-Za-z\s]+$" />
                <div class="error"></div>
            </div>

            <div class="input-control">
                <label for="email">Email</label>
                <input id="email" name="email" type="email" required />
                <div class="error"></div>
            </div>

            <div class="input-control">
                <label for="phone">Phone Number</label>
                <input id="phone" name="phone" type="tel" required pattern="^\d{10,15}$" />
                <div class="error"></div>
            </div>

            <div class="input-control">
                <label for="address">Address</label>
                <input id="address" name="address" type="text" required />
                <div class="error"></div>
            </div>

            <div class="input-control">
                <label for="ccnumber">Credit Card Number</label>
                <input id="ccnumber" name="ccnumber" type="text" required pattern="^\d{16}$" />
                <div class="error"></div>
            </div>

            <div class="input-control">
                <label for="expiry">Expiry Date</label>
                <input id="expiry" name="expiry" type="month" required />
                <div class="error"></div>
            </div>

            <div class="input-control">
                <label for="cvv">CVV</label>
                <input id="cvv" name="cvv" type="text" required pattern="^\d{3}$" maxlength="3" />
                <div class="error"></div>
            </div>

            <button type="submit">Sign Up</button>
        </form>
    </div>
</body>
</html>
